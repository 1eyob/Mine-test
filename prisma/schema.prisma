generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = "mongodb+srv://root:root@cluster0.syegldg.mongodb.net/test"
}

model Boards {
  id        String    @id @default(uuid()) @map("_id")
  name      String
  updatedAt DateTime? @updatedAt
  createdAt DateTime? @default(now())
}

model savedBoards {
  id        String   @id @default(uuid()) @map("_id")
  name      String
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}

model OtpTable {
  id          String   @id @default(uuid()) @map("_id")
  phoneNumber String   @unique
  otpNumber   String
  udatedAt    DateTime @updatedAt
  createdAt   DateTime @default(now())
}

model User {
  id        String   @id @default(uuid()) @map("_id")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  phone     String   @unique
  password  String
  email     String
  name      String
}
